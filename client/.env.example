# Environment Variables for Saast

# Development
VITE_NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=10000
VITE_ENABLE_MOCK_API=true

# Application
VITE_APP_NAME=Saast
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern AI Chat SaaS Template

# Features
VITE_ENABLE_VOICE_RECORDING=false
VITE_ENABLE_FILE_UPLOAD=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Analytics (Optional)
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_MIXPANEL_TOKEN=

# Error Reporting (Optional)
# VITE_SENTRY_DSN=
# VITE_SENTRY_ENVIRONMENT=development

# Storage
VITE_STORAGE_PREFIX=saast_
VITE_MAX_CONVERSATIONS=100
VITE_MAX_MESSAGES_PER_CONVERSATION=1000

# UI/UX
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_PERSISTENCE=true
VITE_ANIMATION_DURATION=300

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000